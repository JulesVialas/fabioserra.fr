# Sécurité - Empêcher l'accès aux fichiers sensibles
<Files ~ "\.(htaccess|htpasswd|ini|log|sh|inc|bak|config)$">
    Require all denied
</Files>

# Empêcher l'accès au dossier src depuis le web
RedirectMatch 404 ^/src/.*$

# Empêcher l'accès aux fichiers de configuration et backup
<FilesMatch "^(composer\.(json|lock)|package(-lock)?\.json|\.env|\.git.*|README\.md)$">
    Require all denied
</FilesMatch>

# Index par défaut
DirectoryIndex index.php

# Activation de la réécriture d'URL
RewriteEngine On

# Forcer HTTPS
RewriteCond %{HTTPS} off
RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# Redirection www vers non-www
RewriteCond %{HTTP_HOST} ^www\.fabioserra\.fr$ [NC]
RewriteRule ^(.*)$ https://fabioserra.fr/$1 [R=301,L]

# Gestion des fichiers statiques à la racine (robots.txt, sitemap.xml, favicon.ico)
RewriteCond %{REQUEST_FILENAME} -f
RewriteCond %{REQUEST_URI} ^/(robots\.txt|sitemap\.xml|favicon\.ico)$
RewriteRule ^(.*)$ - [L]

# Gestion des assets statiques
RewriteCond %{REQUEST_FILENAME} -f
RewriteCond %{REQUEST_URI} ^/assets/
RewriteRule ^(.*)$ - [L]

# Redirection de toutes les autres requêtes vers index.php
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^(.*)$ index.php [QSA,L]

# Configuration de sécurité
ServerSignature Off
Header always set X-Content-Type-Options nosniff
Header always set X-Frame-Options SAMEORIGIN
Header always set X-XSS-Protection "1; mode=block"
Header always set Strict-Transport-Security "max-age=31536000; includeSubDomains; preload"

# Compression GZIP
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css text/javascript application/javascript application/x-javascript image/webp image/png image/jpeg image/svg+xml
</IfModule>

# Cache pour les assets statiques
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresByType text/css "access plus 1 month"
    ExpiresByType application/javascript "access plus 1 month"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/jpg "access plus 1 year"
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/gif "access plus 1 year"
    ExpiresByType image/webp "access plus 1 year"
    ExpiresByType image/svg+xml "access plus 1 year"
    ExpiresByType font/woff "access plus 1 year"
    ExpiresByType font/woff2 "access plus 1 year"
</IfModule>

# Configuration des en-têtes de cache
<IfModule mod_headers.c>
    <FilesMatch "\.(css|js|png|jpg|jpeg|gif|webp|svg|woff|woff2)$">
        Header set Cache-Control "public, max-age=31536000"
    </FilesMatch>
</IfModule>

# Configuration PHP (si mod_php est activé)
<IfModule mod_php.c>
    php_flag display_errors Off
    php_flag log_errors On
    php_value upload_max_filesize 10M
    php_value post_max_size 10M
</IfModule>

